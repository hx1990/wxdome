<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <style media="screen">
      h2 { text-align: center}
    .shadow {position:fixed; width:100%; height:100%; background:#000; opacity:0.3; filter:alpha(opacity:30); left:0; top: 0;}
    .mod_dialog {width:400px; height:400px; border:1px solid black; background:#fff; position:fixed; left:50%; top:50%; margin-left:-200px; margin-top:-200px}
    .top-wrap a {padding:20px; background:#ccc ; text-decoration: none}
    .top-wrap a:hover { background:yellow; text-decoration: none}
    .content-wrap { margin-top: 50px;}
    </style>
    <title></title>
  </head>
  <body>
    <div class="page">
      <% include components/top.inc.ejs %>
      <div class="content-wrap">
        <div>
          <h5>添加一条数据</h5>
          <form action="?" method="post" >
            菜名：<input type="text" name="ptitle" /><br>
            图片路径：<input type="text" name="psrc" /><br>
            订单数量：<input type="number" name="stepper" /><br>
            用户：<input type="text" name="user" /><br>
            电话：<input type="text" name="phone" /><br>
            地址：<input type="text" name="address" /><br>
            订单提交时间：<input type="text" name="posttime" /><br>
            配送时间：<input type="text" name="sendtime" /><br>
            单价：<input type="number" name="price" /><br>
            <input type="submit" value="添加"/>
          </form>
        </div>
        <table border="1" width="100%">
          <thead>
            <tr>
              <th>ID</th>
              <th>菜名</th>
              <th>图片路径</th>
              <th>订单数量</th>
              <th>用户</th>
              <th>电话</th>
              <th>地址</th>
              <th>订单提交时间</th>
              <th>配送时间</th>
              <th>单价</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0;i<data1.length;i++){ %>
            <tr>
                    ptitle,psrc,stepper,user,phone,address,posttime,sendtime,price
              <td><%=data1[i].ID%></td>
              <td><%=data1[i].ptitle%></td>
              <td><img width="70px" src="<%=data1[i].psrc%>"></td>
              <td><%=data1[i].stepper%></td>
              <td><%=data1[i].user%></td>
              <td><%=data1[i].phone%></td>
              <td><%=data1[i].address%></td>
              <td><%=data1[i].posttime%></td>
              <td><%=data1[i].sendtime%></td>
              <td><%=data1[i].price%></td>
              <td>
                <a href="?act=mod&id=<%=data1[i].ID%>">修改</a>
                <a href="?act=del&id=<%=data1[i].ID%>" onclick="return confirm('你真的要删吗？')">删除</a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
        <% if(typeof mod_data!='undefined'){ %>
        <div class="shadow"></div>
        <div class="mod_dialog">
          <h5>修改数据</h5>
          <form action="?" method="post" >
            <input type="hidden" name="mod_id" value="<%= mod_data.ID %>" />
            菜名：<input type="text" name="ptitle" value="<%= mod_data.ptitle %>"/><br>
            图片路径：<input type="text" name="psrc" value="<%= mod_data.psrc %>"/><br>
            订单数量：<input type="number" name="stepper" value="<%= mod_data.stepper %>"/><br>
            用户：<input type="text" name="user" value="<%= mod_data.user %>"/><br>
            电话：<input type="text" name="phone" value="<%= mod_data.phone %>"/><br>
            地址：<input type="text" name="address" value="<%= mod_data.address %>"/><br>
            订单提交时间：<input type="text" name="posttime" value="<%= mod_data.posttime %>"/><br>
            订单配送时间：<input type="text" name="sendtime" value="<%= mod_data.sendtime %>"/><br>
            单价：<input type="number" name="price" value="<%= mod_data.price %>"/><br>
            <input type="submit" value="修改"/>
            <a href="/admin/orderinfo">取消修改</a>
          </form>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>

