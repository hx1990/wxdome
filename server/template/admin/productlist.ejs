<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <style media="screen">
      h2 { text-align: center}
    .shadow {position:fixed; width:100%; height:100%; background:#000; opacity:0.3; filter:alpha(opacity:30); left:0; top: 0;}
    .mod_dialog {width:430px;  border:1px solid black; background:#fff; position:fixed; left:50%; top:50%; margin-left:-200px; margin-top:-200px}
    .top-wrap a {padding:20px; background:#ccc ; text-decoration: none}
    .top-wrap a:hover { background:yellow; text-decoration: none}
    .content-wrap { margin-top: 50px;}
    .page{margin-bottom:150px;}
    </style>
    <title></title>
  </head>
  <body>
    <div class="page">
      <% include components/top.inc.ejs %>
      <div class="content-wrap">
        <div>
          <h5>添加一条数据</h5>
          <form action="?" method="post" enctype="multipart/form-data">
            菜名：<input type="text" name="name" /><br>
            类型：<input type="text" name="type" /><br>
            价格：<input type="number" name="price" /><br>
            上传图片：<input type="file" name="src" /><br>
            销量：<input type="number" name="sales" /><br>
            详细信息：<textarea type="text" name="details"></textarea><br>
            评价：<textarea type="text" name="evaluate"></textarea><br>
            规格：<input type="text" name="specification"/><br>
            <input type="submit" value="添加"/>
          </form>
        </div>
        <table border="1" width="100%">
          <thead>
            <tr>
              <th>ID</th>
              <th>菜名</th>
              <th>类型</th>
              <th>价格</th>
              <th>图片</th>
              <th>销量</th>
              <th>详细信息</th>
              <th>评价</th>
              <th>规格</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0;i<data1.length;i++){ %>
            <tr>
              <td><%=data1[i].ID%></td>
              <td><%=data1[i].name%></td>
              <td><%=data1[i].type%></td>
              <td><%=data1[i].price%></td>
              <td><img width="70px" src="<%=data1[i].src%>"></td>
              <td><%=data1[i].sales%></td>
              <td><%=data1[i].details%></td>
              <td><%=data1[i].evaluate%></td>
              <td><%=data1[i].specification%></td>
              <td>
                <a href="?act=mod&id=<%=data1[i].ID%>">修改</a>
                <a href="?act=del&id=<%=data1[i].ID%>" onclick="return confirm('你真的要删吗？')">删除</a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
        <% if(typeof mod_data!='undefined'){ %>
        <div class="shadow"></div>
        <div class="mod_dialog">
          <h5>修改数据</h5>
          <form action="?" method="post" enctype="multipart/form-data">
            <input type="hidden" name="mod_id" value="<%= mod_data.ID %>" />
            菜名：<input type="text" name="name" value="<%= mod_data.name %>"/><br>
            类型：<input type="text" name="type" value="<%= mod_data.type %>"/><br>
            价格：<input type="number" name="price" value="<%= mod_data.price %>"/><br>
            修改图片：<input type="file" name="src" value="<%= mod_data.src %>" /><br>
            销量：<input type="number" name="sales" value="<%= mod_data.sales %>"/><br>
            详细信息：<textarea type="text" name="details"><%= mod_data.details %></textarea><br>
            评价：<textarea type="text" name="evaluate"><%= mod_data.evaluate %></textarea><br>
            规格：<input type="text" name="specification" value="<%= mod_data.specification%>"/><br>
            <input type="submit" value="修改"/>
            <a href="/admin/productlist">取消修改</a>
          </form>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>

