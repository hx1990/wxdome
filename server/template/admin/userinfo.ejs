<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <style media="screen">
      h2 { text-align: center}
    .shadow {position:fixed; width:100%; height:100%; background:#000; opacity:0.3; filter:alpha(opacity:30); left:0; top: 0;}
    .mod_dialog {width:400px; height:400px; border:1px solid black; background:#fff; position:fixed; left:50%; top:50%; margin-left:-200px; margin-top:-200px}
    .top-wrap a {padding:20px; background:#ccc ; text-decoration: none}
    .top-wrap a:hover { background:yellow; text-decoration: none}
    .content-wrap { margin-top: 50px;}
    </style>
    <title></title>
  </head>
  <body>
    <div class="page">
      <% include components/top.inc.ejs %>
      <div class="content-wrap">
        <div>
          <h5>添加一条数据</h5>
          <form action="?" method="post" >
            微信名：<input type="text" name="wxname" /><br>
            名字：<input type="text" name="name" /><br>
            地址：<input type="text" name="address" /><br>
            电话号码：<input type="number" name="phone" /><br>
            <input type="submit" value="添加"/>
          </form>
        </div>
        <table border="1" width="100%">
          <thead>
            <tr>
              <th>ID</th>
              <th>微信名</th>
              <th>名字</th>
              <th>地址</th>
              <th>电话</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0;i<data1.length;i++){ %>
            <tr>
              <td><%=data1[i].ID%></td>
              <td><%=data1[i].wxname%></td>
              <td><%=data1[i].name%></td>
              <td><%=data1[i].address%></td>
              <td><%=data1[i].phone%></td>
              <td>
                <a href="?act=mod&id=<%=data1[i].ID%>">修改</a>
                <a href="?act=del&id=<%=data1[i].ID%>" onclick="return confirm('你真的要删吗？')">删除</a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
        <% if(typeof mod_data!='undefined'){ %>
        <div class="shadow"></div>
        <div class="mod_dialog">
          <h5>修改数据</h5>
          <form action="?" method="post" >
            <input type="hidden" name="mod_id" value="<%= mod_data.ID %>" />
            微信名：<input type="text" name="wxname" value="<%= mod_data.wxname %>"/><br>
            名字:<input type="text" name="name" value="<%=mod_data.name%>"/><br>
            地址：<input type="text" name="address" value="<%= mod_data.address %>"/><br>
            电话：<input type="number" name="phone" value="<%= mod_data.phone %>"/><br>
            <input type="submit" value="修改"/>
            <a href="/admin/userinfo">取消修改</a>
          </form>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>

