/**index.wxss**/
.container {
 padding:0;
 position: relative;
}
.listwrap {
  width: 240rpx;
  height: 100%;
  overflow: hidden;
  float: left;
}
.slide-image{width: 240rpx;height:180rpx}
.zan-icon {
  font-size: 50px;
  margin: 10px;
}
.zhaopai1{font-size: 30rpx;text-align: left; width: 100%}
.swiper-item{width: 150rpx;}
.zan-popup--show,.wrap, .zan-popup__container{width: 100%}
.title{font-size: 28rpx; text-overflow: ellipsis}
.titleprice{font-size: 28rpx; color: red;}
.zhaopai .zan-stepper{display: inline-block;  font-size: 24rpx; padding:0rpx 5rpx; position: absolute; bottom: 0rpx;  right: 0rpx}
.scrollwarp{height: 300rpx; overflow: hidden}
.scroll-item{ width:240rpx; margin-right: 20rpx; display: inline-block; position:relative; }
.zhaopai .zan-stepper--small .zan-stepper__text {
width:36rpx;
line-height:36rpx;
height:36rpx;
padding:0rpx 5rpx;
}
.zhaopai .zan-stepper--small view {
min-width:52rpx;
height:40rpx;
line-height:40rpx;
padding:0rpx 5rpx
}

.zhaopai .zan-stepper__minus, .zhaopai .zan-stepper__text,.zhaopai .zan-stepper__plus {
width:52rpx;
line-height:40rpx;
height:40rpx;
border-radius:0 2rpx;
}



/* 购物车 */
.shapcat{
  width: 100%;
  height: 120rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.3);
  display: flex
}
.shapcat .zan-icon{margin: 0; margin-top:-30rpx; display: inline-block;}
.shapcat .zan-btn{display: inline-block; width: 40%; height: 100%;font-size: 40rpx; line-height:120rpx;color: #fff;}
.shapcat .price{font-size: 40rpx; height: 80rpx; line-height: 80rpx; display: inline-block; margin-left: 40rpx; padding-top:40rpx; color: #fff;}


/* 购物车详情 */
 .catlist{position:fixed; font-size: 30rpx; left: 0px; bottom:120rpx; width: 100%; background:rgba(169,169,169,0.9)}
 .catitem{width: 100%; height:50rpx;line-height: 50rpx; border-bottom: 1px dashed #fff; padding:15rpx 0; position: relative;}
 .itempirce {margin-left: 20rpx;}
 .catitem .zan-stepper{right:10rpx;display: inline-block;  font-size: 24rpx; padding:0rpx 5rpx; position: absolute; bottom: 5rpx;  }
.close{background:rgba(169,169,169,0.9) }

 /* 商品列表 */
 .alllist{ width: 100%; display:flex; margin-top:10rpx; }
 
 .lefttitle{width:25%; margin-right:5%;}
 .lefttitle .leftname{font-size: 30rpx; padding:10rpx;}
 .rightproduct{width:70%; }
 .rightproduct .topname{font-size: 30rpx;}
 .rightproduct .scroll-item{ width:100%;  display: inline-block; position:relative; margin-bottom: 15rpx}
 .rightproduct view{display: inline-block;}
 .rightproduct .title{ font-weight:bold; height: 30rpx;}
 .rightproduct .detail{font-size: 24rpx; text-overflow: ellipsis;height: 100rpx;}

 .leftpic{width: 40%; margin-right:2%;}
 .righttext{width: 57%; height: 180rpx; }

 .rightproduct .zan-stepper--small .zan-stepper__text {
width:42rpx;
line-height:42rpx;
height:42rpx;
padding:0rpx 5rpx;
}
.rightproduct .zan-stepper--small view {
min-width:60rpx;
height:46rpx;
line-height:46rpx;
padding:0rpx 5rpx
}

.rightproduct .zan-stepper__minus, .rightproduct .zan-stepper__text,.rightproduct .zan-stepper__plus {
width:60rpx;
line-height:46rpx;
height:46rpx;
border-radius:0 2rpx;
}
.rightproduct .zan-stepper{right:10rpx;display: inline-block;  font-size: 24rpx; padding:0rpx 5rpx; position: absolute; bottom: 0rpx;  }